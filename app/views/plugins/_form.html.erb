<% form_for(@plugin) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :category_id %><br /> 
    <%= f.select :category_id , Category.find(:all).collect{ |c| [c.name, c.id] }, {:include_blank => true} %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>